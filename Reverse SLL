#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

// লিস্ট রিভার্স করার ফাংশন
struct Node* reverse(struct Node* head) {
    struct Node* prevNode = NULL;
    struct Node* currentNode = head;
    struct Node* nextNode = NULL;

    while (currentNode != NULL) {
        nextNode = currentNode->next;  // পরের নোড মনে রাখলাম
        currentNode->next = prevNode;  // লিংক উল্টে দিলাম
        prevNode = currentNode;        // prevNode এগোলো
        currentNode = nextNode;        // currentNode এগোলো
    }

    head = prevNode; // নতুন head
    return head;
}

// লিস্ট প্রিন্ট করার ফাংশন
void display(struct Node* head) {
    struct Node* temp = head;
    while (temp != NULL) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

int main() {
    struct Node* head = NULL;
    struct Node* temp = NULL;
    struct Node* newNode = NULL;
    int n, val;

    printf("How many nodes do you want to insert? ");
    scanf("%d", &n);

    for (int i = 1; i <= n; i++) {
        printf("Enter value for node %d: ", i);
        scanf("%d", &val);

        newNode = (struct Node*)malloc(sizeof(struct Node));
        newNode->data = val;
        newNode->next = NULL;

        if (head == NULL) {
            head = newNode;
            temp = head;
        } else {
            temp->next = newNode;
            temp = newNode;
        }
    }

    printf("\nOriginal List:\n");
    display(head);

    head = reverse(head);

    printf("\nReversed List:\n");
    display(head);

    return 0;
}
