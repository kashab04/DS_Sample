#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

// ফাংশন: লিস্টের দৈর্ঘ্য বের করা
int getLength(struct Node* head) {
    int count = 0;
    struct Node* temp = head;

    while (temp != NULL) {
        count++;
        temp = temp->next;
    }

    return count;
}

// লিস্ট প্রিন্ট করার ফাংশন
void display(struct Node* head) {
    struct Node* temp = head;
    printf("Current List: ");
    if (temp == NULL) {
        printf("List is empty.");
    } else {
        while (temp != NULL) {
            printf("%d -> ", temp->data);
            temp = temp->next;
        }
        printf("NULL");
    }
    printf("\n\n");
}

int main() {
    struct Node* head = NULL;
    struct Node* temp = NULL;
    struct Node* newNode = NULL;
    int n, val;

    printf("How many nodes do you want to insert? ");
    scanf("%d", &n);

    // লিস্ট তৈরি করা
    for (int i = 1; i <= n; i++) {
        printf("Enter value for node %d: ", i);
        scanf("%d", &val);

        newNode = (struct Node*)malloc(sizeof(struct Node));
        newNode->data = val;
        newNode->next = NULL;

        if (head == NULL) {
            head = newNode;
            temp = head;
        } else {
            temp->next = newNode;
            temp = newNode;
        }
    }

    printf("\nList:\n");
    display(head);

    printf("Length of the linked list: %d\n", getLength(head));

    return 0;
}
